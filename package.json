{
  "name": "react-without-dockerfile",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@cypress/instrument-cra": "^1.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "babel-plugin-istanbul": "^6.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts -r @cypress/instrument-cra start",
    "build": "react-scripts build",
    "test": "react-scripts test cypress run",
    "eject": "react-scripts eject",
    "coverage:report": "nyc report --reporter=html --reporter=text-summary",
    "dev": "start-test 3000 cy:open",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "coverage:merge": "nyc merge coverage .nyc_output/out.json",
    "coverage:clean": "rm -rf .nyc_output coverage"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.39",
    "istanbul-lib-coverage": "^3.2.2",
    "nyc": "^17.0.0",
    "start-server-and-test": "^2.0.4"
  }
}
